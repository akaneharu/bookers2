<main>
  <%= flash[:notice] %>
  <%= render 'books/list', book: @book, user: @user %>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
        <table class="table">
          <thead>
           <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th></th>
           </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
              <tr>
               <% if @user.profile_image.attached? %>
                <td><%= link_to (image_tag @user.profile_image, size: "100x100"), user_path(@user.id) %></td>
               <% else %>
                <td><%= link_to (image_tag 'no_image', size: "100x100"), user_path(@user.id) %></td>
               <% end %>
                <td><%= link_to book.title, book_path(book.id) %></td>
                <td><%= book.body %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
    </div>
</main>
