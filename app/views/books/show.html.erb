<main>
  <div><%= flash[:notice] %></div>
  <%= render 'list', book: @post, user: @user %>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
        <table class="table">
          <tbody>
           <tr>
             <% if @book.user.present? && @book.user.profile_image.present? %>
              <td><%= link_to image_tag(@book.user.profile_image, size: "100x100"), user_path(@book.user) %></td>
             <% else %>
              <td><%= link_to image_tag('no_image', size: "100x100"), user_path(@book.user) %></td>
             <% end %>
              <td><%= link_to @book.user.name, user_path(@book.user) %></td>
              <td><%= link_to @book.title, book_path(@book.id) %></td>
              <td><%= @book.body %></td>
             <% if @book.user == current_user %>
              <td><%= link_to "Edit", edit_book_path(@book.id), class: 'btn btn-success' %></td>
              <td><%= link_to "Destroy", book_path, method: :delete, "data-confirm" => "本当に削除しますか？", class: 'btn btn-danger' %></td>
             <% end %>
           </tr>
          </tbody>
        </table>
    </div>
</main>