
<main>
    <% if @book.errors.any? %>
      <%= @book.errors.count %>errors has occurred
      <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %> 
      </ul>
    <% end %>
 
   <div><%= flash[:notice] %></div>
   <%= render 'list', book: @book, user: @user %>
      <div class= "col-md-8 offset-md-1">
        <h2>Books</h2>
          <table class="table">
            <thead>
              <tr>
                <th></th>
                <th>Title</th>
                <th>Opinion</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
                <% @books.each do |book| %>
                  <tr>
                    <% if book.user.present? && book.user.profile_image.present? %>
                     <td><%= link_to image_tag(book.user.profile_image, size: "100x100"), user_path(book.user) %></td>
                    <% else %>
                     <td><%= link_to image_tag('no_image', size: "100x100"), user_path(book.user) %></td>
                    <% end %>
                     <td><%= link_to book.title, book_path(book.id) %></td>
                     <td><%= book.body %></td>
                  </tr>
                <% end %>
            </tbody>
          </table>
      </div>
</main>






